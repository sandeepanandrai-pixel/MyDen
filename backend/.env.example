# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/myden
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/myden?retryWrites=true&w=majority

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Secret (use a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Frontend URL (for CORS in production)
FRONTEND_URL=http://localhost:3000

# AWS Configuration (for production deployment)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# CloudWatch Configuration (optional)
# ENABLE_CLOUDWATCH=true
# LOG_GROUP_NAME=/aws/ecs/myden-backend
